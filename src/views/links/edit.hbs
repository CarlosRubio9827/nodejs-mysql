
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        
                        <div class="form-group">
                            <input type="text" class="form-control" value="{{link.title}}" required name="title" placeholder="Title" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" class="form-control" value="{{link.url}}" required name="url" placeholder="URL">
                        </div>
                        <div class="form-group">
                            <textarea name="description" placeholder="Description" required class="form-control"
                                rows="2">{{link.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">EDIT</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
